    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       if(jTextField1.getText().equals("")||jTextField1.getText().equals("")||jTextField1.getText().equals(""))
       {
       JOptionPane.showMessageDialog(this, "Please Input All Data in the Field");
       }
       else
       {
       String data[] = {jTextField1.getText(),jTextField2.getText(),jTextField3.getText()};
       
       DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
       
       tblModel.addRow(data);
       }
       try{  Class.forName("net.ucanaccess.jdbc.UcanaccessDriver");
            String path = "C:\\Users\\STUDENT.CL3-PC11\\Documents\\scr\\Database2.accdb";
            String url = "jdbc:ucanaccess://" + path;  
            Connection connect = DriverManager.getConnection(url);
            Statement st = (Statement) connect.createStatement();
}
catch (Exception e) {
System.out.println(e);
} 
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       DefaultTableModel tblModel = (DefaultTableModel)jTable1.getModel();
        if(jTable1.getSelectedRowCount()==1)
        {
            tblModel.removeRow(jTable1.getSelectedRow());
            JOptionPane.showMessageDialog(this, "Successfully Deleted");
        }
        
        else
        {
                if(jTable1.getRowCount()==0)
                {
                JOptionPane.showMessageDialog(this, "No Record in the table");
                }
                else
                {
                JOptionPane.showMessageDialog(this, "Select Row To be Deleted");
                }
                
        }
    }                                        

